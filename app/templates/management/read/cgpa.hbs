<div id="cgpapart">
        <form method = "get">
            <p>
                <label for="cgpa">Cgpa: </label>
                 <input type="number" step="any" id="cgpa" name="cgpa" placeholder="cgpa" size = "30" maxlength="35">
             </p>
             <label for="cgpa_choice">Choice of search: </label>
             <select name = "cgpa_choice" id = "cgpa_choice" multiple size="3">
                <option value="equal">Equal</option>
                <option value="notequal">Not Equal</option>
                <option value="greater">Greater than</option>
                <option value="lesser">Lesser than</option>
            </select>
            <p>
                <input type="submit" value="Submit Details" {{action "cgpa_data"}}>
            </p>
        </form>
    </div>
    <div id="data">

</div>